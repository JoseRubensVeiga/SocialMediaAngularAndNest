{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@domain/*": ["./src/@core/domain/*"],
      "@database/*": ["./src/@core/database/*"],
      "@config/*": ["./src/@core/config/*"],
      "@repositories/*": ["./src/@core/repositories/*"],
    }
  }
}
